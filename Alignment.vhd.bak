-- ALIGNMENT VHDL

-- LIBRARIES
library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

-- ENTITY
entity Alignment is
	port (
		Function3  : in std_logic_vector(2 downto 0);
		q_b  : in std_logic_vector(31 downto 0);
		Imm : in std_logic_vector(11 downto 0);

		RT_Align_in	: out std_logic_vector(31 downto 0)
	);
end entity;

-- ARCHITECTURE
architecture archi of Alignment is
	signal combCpt, regCpt : std_logic_vector(31 downto 0);
begin
	
	combCpt <= CPTinput when (CPTwrite = '1' and CPTaddr(31)='1' and CPTaddr(7 downto 0)=x"00") else std_logic_vector(unsigned(regCpt)+1);
	regCpt <= (others => '0') when CPTreset='1' else
					combCpt when rising_edge(CPTclock);
		
	CPTcounter <= regCpt;
						
	-- END
end archi;
-- END FILE